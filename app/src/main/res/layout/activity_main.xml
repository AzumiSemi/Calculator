<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shawn_wind.calculator.MainActivity">


    <TextView
        android:id="@+id/display"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlack"
        android:gravity="right"
        android:text=""
        android:textSize="40sp"
        android:textColor="@color/colorWhite"/>



    <Button
        android:id="@+id/button7"
        android:text="7"
        android:textSize="@dimen/text_size"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/button8"
        android:onClick="onNumberButtonClick"/>
    <Button
        android:id="@+id/button8"
        android:text="8"
        android:textSize="@dimen/text_size"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_centerInParent="true"
        android:onClick="onNumberButtonClick"/>
    <Button
        android:id="@+id/button9"
        android:text="9"
        android:textSize="@dimen/text_size"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/button8"
        android:onClick="onNumberButtonClick"/>

    <Button
        android:id="@+id/button4"
        android:text="4"
        android:textSize="@dimen/text_size"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@+id/button7"
        android:layout_alignLeft="@+id/button7"
        android:onClick="onNumberButtonClick"/>
    <Button
        android:id="@+id/button5"
        android:text="5"
        android:textSize="@dimen/text_size"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@+id/button8"
        android:layout_alignLeft="@+id/button8"
        android:onClick="onNumberButtonClick"/>
    <Button
        android:id="@+id/button6"
        android:text="6"
        android:textSize="@dimen/text_size"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@+id/button9"
        android:layout_alignLeft="@+id/button9"
        android:onClick="onNumberButtonClick"/>

    <Button
        android:id="@+id/button1"
        android:text="1"
        android:textSize="@dimen/text_size"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/button4"
        android:onClick="onNumberButtonClick"/>
    <Button
        android:id="@+id/button2"
        android:text="2"
        android:textSize="@dimen/text_size"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@+id/button5"
        android:layout_alignLeft="@+id/button5"
        android:onClick="onNumberButtonClick"/>
    <Button
        android:id="@+id/button3"
        android:text="3"
        android:textSize="@dimen/text_size"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@+id/button6"
        android:layout_alignLeft="@+id/button6"
        android:onClick="onNumberButtonClick"/>

    <Button
        android:id="@+id/button0"
        android:text="0"
        android:textSize="@dimen/text_size"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@+id/button1"
        android:layout_alignLeft="@+id/button1"
        android:onClick="onNumberButtonClick"/>
    <Button
        android:id="@+id/button00"
        android:text="00"
        android:textSize="@dimen/text_size"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:onClick="onNumberButtonClick"/>
    <Button
        android:id="@+id/button."
        android:text="."
        android:textSize="@dimen/text_size"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:onClick="num"/>

    <Button
        android:id="@+id/buttonAdditoin"
        android:text="＋"
        android:textSize="@dimen/text_size"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@+id/buttonSubtraction"
        android:layout_alignLeft="@+id/buttonSubtraction"
        android:onClick="onOperatorButtonClick"/>
    <Button
        android:id="@+id/buttonSubtraction"
        android:text="－"
        android:textSize="@dimen/text_size"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@+id/buttonMaltiplication"
        android:layout_alignLeft="@+id/buttonMaltiplication"
        android:onClick="onOperatorButtonClick"/>
    <Button
        android:id="@+id/buttonMaltiplication"
        android:text="×"
        android:textSize="@dimen/text_size"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/button9"
        android:onClick="onOperatorButtonClick"/>
    <Button
        android:id="@+id/buttonDivision"
        android:text="÷"
        android:textSize="@dimen/text_size"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/buttonMaltiplication"
        android:onClick="onOperatorButtonClick"/>
    <Button
        android:id="@+id/buttonEqual"
        android:text="＝"
        android:textSize="@dimen/text_size"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@+id/buttonAdditoin"
        android:layout_alignLeft="@+id/buttonAdditoin"
        android:onClick="onEqualButtonClick"/>
    <Button
        android:id="@+id/buttonAllClear"
        android:text="AC"
        android:textSize="@dimen/text_size"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_toLeftOf="@+id/buttonClear"
        android:layout_above="@+id/button7"/>
    <Button
        android:id="@+id/buttonClear"
        android:text="C"
        android:textSize="@dimen/text_size"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_toLeftOf="@+id/buttonPercentage"
        android:layout_above="@id/button8"
        android:onClick="onClearButtonClick"/>
    <Button
        android:id="@+id/buttonPercentage"
        android:text="％"
        android:textSize="@dimen/text_size"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_toLeftOf="@+id/buttonDivision"
        android:layout_above="@+id/button9"/>
</RelativeLayout>
